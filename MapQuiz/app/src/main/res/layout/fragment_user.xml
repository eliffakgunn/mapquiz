<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="#D1DBE2">

    <ImageView
        android:id="@+id/img_quiz"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_quiz3"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/button_left"
        android:layout_marginLeft="140dp"
        />

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="145dp"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/img_quiz"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="160dp"
            android:layout_alignTop="@+id/img_quiz"
            android:layout_marginLeft="155dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/img_coin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_coin"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/txt_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignLeft="@id/img_coin"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:backgroundTint="#23435E"
            android:textColor="#D5E2EA"
            android:text="@string/str_login"
            android:textAllCaps="false"
            android:textSize="22dp"
            android:layout_marginTop="100dp"
            android:layout_alignTop="@+id/layout1"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_alignTop="@+id/layout1"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/e_txt_username"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:backgroundTint="#23435E"
                android:hint="@string/str_username"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/e_txt_mail"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#23435E"
                android:hint="@string/str_mail"
                />

            <TextView
                android:id="@+id/txt_change_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Şifreyi değiştir"
                android:textColor="@color/black"
                android:clickable="true"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:backgroundTint="#23435E"
                android:textColor="#D5E2EA"
                android:text="@string/str_save"
                android:textAllCaps="false"
                android:textSize="22dp"
                android:layout_marginTop="25dp"
                />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:backgroundTint="#23435E"
                android:text="@string/str_logout"
                android:textAllCaps="false"
                android:textColor="#D5E2EA"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>


</RelativeLayout>