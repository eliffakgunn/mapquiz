<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1DBE2">

    <TextView
        android:id="@+id/text_quiz"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:text="@string/str_categories"
        android:textColor="#23435E"
        android:gravity="center"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/ic_leftButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/ic_left_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/img_quiz"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/btn_country"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#23435E"
            android:textColor="#D5E2EA"
            android:text="@string/str_country"
            android:textAllCaps="false"
            android:textSize="22dp"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/btn_capital"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#23435E"
            android:textColor="#D5E2EA"
            android:textAllCaps="false"
            android:text="@string/str_capital"
            android:textSize="22dp"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btn_flag"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#23435E"
            android:textColor="#D5E2EA"
            android:text="@string/str_flag"
            android:textAllCaps="false"
            android:textSize="22dp"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btn_mixed"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#23435E"
            android:textColor="#D5E2EA"
            android:textAllCaps="false"
            android:text="@string/str_mixed"
            android:textSize="22dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</RelativeLayout>