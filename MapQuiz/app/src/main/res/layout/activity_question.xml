<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:textColor="#D1DBE2"
        android:layout_marginTop="5dp"
        android:textSize="21dp"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/txt_user_name"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/img_coin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_coin"/>

        <TextView
            android:id="@+id/txt_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="#D5E2EA"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/txt_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="#D5E2EA"
            android:text=" puan"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/img_hourglass"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_hourglass"
            android:layout_marginTop="3dp"

            />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="#D1DBE2"
            android:text="10"
            android:textSize="30dp"
            android:layout_alignLeft="@+id/img_hourglass"/>

    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        >

        <TextView
            android:id="@+id/txt_q_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="#D1DBE2"
            android:text="10"
            android:textSize="21dp"
            />

        <TextView
            android:id="@+id/txt_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="#D1DBE2"
            android:text="/10"
            android:textSize="21dp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/img_flag"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/layout"
        android:layout_marginTop="45dp"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/txt_flagQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_flag"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="2dp"
        android:clickable="false"
        android:textColor="@color/white"
        android:text="Bu bayrak hangi Ã¼lkeye aittir?"
        android:textSize="22dp"
        android:layout_alignTop="@+id/layout"
        android:layout_marginTop="55dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/txt_otherQs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_alignTop="@+id/layout"
        android:textAlignment="center"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/txt_flagQ"
        android:layout_marginTop="70dp"/>



</RelativeLayout>