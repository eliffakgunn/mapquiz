<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="#D1DBE2"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/ic_icon1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_kesfet"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#23435E"
            android:textColor="#D5E2EA"
            android:textAllCaps="false"
            android:text="@string/str_kesfet"
            android:textSize="22dp"
            android:layout_marginTop="75dp"/>

        <Button
            android:id="@+id/btn_quiz"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#23435E"
            android:text="@string/str_quiz"
            android:textAllCaps="false"
            android:layout_above="@+id/btn_kesfet"
            android:textColor="#D5E2EA"
            android:textSize="22dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</LinearLayout>